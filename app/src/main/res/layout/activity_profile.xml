<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgMrStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textColor="#00000e"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/imgMrStark"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txtstarkEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries.com"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/imgMrStark"
        android:textSize="20sp"
        android:layout_below="@id/txtName"/>
    <TextView
        android:id="@+id/txtPhoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91-112121221"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/imgMrStark"
        android:textSize="20sp"
        android:layout_below="@id/txtstarkEmail"/>
    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:backgroundTint="#ff1733"
        android:textStyle="bold"
        android:layout_margin="10dp"

        android:textSize="20sp"
        android:layout_below="@id/txtPhoneno"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit the App"
        android:backgroundTint="#109ffd"
        android:textStyle="bold"
        android:layout_margin="10dp"

        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>